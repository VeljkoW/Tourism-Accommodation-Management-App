<Window x:Class="BookingApp.View.Owner.OwnerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.Owner"
        mc:Ignorable="d"
        Title="OwnerMainWindow" Height="1080" Width="1920">
    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <EventSetter Event="PreviewMouseDown" Handler="ListBoxItem_PreviewMouseDown"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
        <Grid x:Name="NavigationBar" Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="AccommodationReservationButton" Grid.Row="0" Grid.Column="0" Width="350" Height="100" Click="AccommodationReservationClick" 
                Content="Reserve Accommodation" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="AccommodationStatisticsButton" Grid.Row="1" Grid.Column="0" Width="350" Height="100" Click="AccommodationStatisticsClick" 
                Content="Accommodation Statistics" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="ReservationReschedulingButton" Grid.Row="2" Grid.Column="0" Width="350" Height="100" Click="ReservationReschedulingClick" 
                Content="Reservation Rescheduling" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="GuestRatingButton" Grid.Row="3" Grid.Column="0" Width="350" Height="100" Click="GuestRatingClick"
                Content="Guest Rating" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="GuestReviewsButton" Grid.Row="4" Grid.Column="0" Width="350" Height="100" Click="GuestReviewsClick" 
            Content="Guest Reviews" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="RenovationButton" Grid.Row="5" Grid.Column="0" Width="350" Height="100" Click="RenovationClick" 
            Content="Renovation" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="ForumButton" Grid.Row="6" Grid.Column="0" Width="350" Height="100" Click="ForumClick" 
            Content="Forum" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Grid>
        <Label Margin="0 0 125 0" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" 
               FontSize="20" Content="Notifications"></Label>
        <ListBox x:Name="NotificationListBox" Grid.Row="0" Grid.Column="1" Width="350" Height="100" HorizontalAlignment="Right"
                 SelectedValuePath="Print" DisplayMemberPath="Print"></ListBox>
    </Grid>
</Window>
