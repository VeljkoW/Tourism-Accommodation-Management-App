                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0" VerticalAlignment="Center">
                                    <Label Content="Accommodation Name:*" FontSize="20"/>
                                    <TextBox x:Name="NameTextBox" Width="250" Height="32" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" />
                                </DockPanel>
                                <DockPanel Grid.Row="1" VerticalAlignment="Center">
                                    <Label Content="Accommodation Type:*" FontSize="20"/>
                                    <ComboBox x:Name="AccommodationTypeComboBox" Width="250" Height="32" FontSize="20"
                                              HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <ComboBoxItem Content="Apartment"></ComboBoxItem>
                                        <ComboBoxItem Content="House"></ComboBoxItem>
                                        <ComboBoxItem Content="Hut"></ComboBoxItem>
                                    </ComboBox>
                                </DockPanel>
                                <DockPanel Grid.Row="2" VerticalAlignment="Center">
                                    <Label Content="Location - State:*" FontSize="20"/>
                                    <ComboBox x:Name="StateComboBox" Width="250" Height="32" FontSize="20"
                                              ItemsSource="{Binding States, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedState}"
                                              HorizontalAlignment="Right" VerticalAlignment="Center" SelectionChanged="StatePickedSelectionChanged"/>
                                </DockPanel>
                                <DockPanel Grid.Row="3" VerticalAlignment="Center">
                                    <Label Content="Location - City:*" FontSize="20"/>
                                    <ComboBox x:Name="CityComboBox" Width="250" Height="32" FontSize="20" 
                                              ItemsSource="{Binding Cities, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedLocation}" 
                                              HorizontalAlignment="Right" VerticalAlignment="Center"
                                              SelectedValuePath="PrintCities" DisplayMemberPath="PrintCities"/>
                                </DockPanel>
                                <DockPanel Grid.Row="4" VerticalAlignment="Center">
                                    <Label Content="Max number of guests:*" FontSize="20"/>
                                    <userControls:NumberTextBox x:Name="MaxGuestNumberTextBox" Width="250" Height="32" FontSize="20" 
                                                                HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </DockPanel>
                                <DockPanel Grid.Row="5" VerticalAlignment="Center">
                                    <Label Content="Min number of reservation days:*" FontSize="20"/>
                                    <userControls:NumberTextBox x:Name="MinResDaysTextBox" Width="250" Height="32" FontSize="20" 
                                                                HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </DockPanel>
                                <DockPanel Grid.Row="6" VerticalAlignment="Center">
                                    <Label Content="Cancelation days limit:*" FontSize="20"/>
                                    <userControls:NumberTextBox x:Name="CancelationDaysLimitTextBox" Width="250" Height="32" FontSize="20" 
                                                                HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>

                            <Grid Grid.Column="1" Grid.Row="0" Margin="80 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MinHeight="60"/>
                                    <RowDefinition Height="3*" MinHeight="140"/>
                                </Grid.RowDefinitions>
                                <Button x:Name="AddImagesButton" Grid.Row="0" Command="{Binding AddImage}" Content="Add Image"
                                        HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="60" FontSize="24"/>

                                <Border Grid.Row="1" BorderThickness="2" Margin="0 7" Height="270"
                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black">
                                    <Grid>
                                        <Image Source="{Binding CurrentImagePath}" Stretch="Uniform"/>
                                        <Button Grid.Row="1" BorderThickness="0" Width="20" Height="20" Background="Transparent"
                                                HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding DeleteImageCommand}">
                                            <Button.Content>
                                                <Image Source="../../Resources/Images/delete.png"></Image>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </Border>
                                <Button Grid.Row="1" BorderThickness="0" Width="20" Height="20" Background="Transparent"
                                        HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding PreviousImageCommand}">
                                    <Button.Content>
                                        <Image Source="../../Resources/Images/Guest/arrowleft.png"></Image>
                                    </Button.Content>
                                </Button>
                                <Button Grid.Row="1" BorderThickness="0" Width="20" Height="20" Background="Transparent"
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Command="{Binding NextImageCommand}">
                                    <Button.Content>
                                        <Image Source="../../Resources/Images/Guest/arrowright.png"></Image>
                                    </Button.Content>
                                </Button>
                            </Grid>
                            <Button x:Name="AcceptButton" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                    Command="{Binding Accept}" Height="60" Width="200" Margin="0 20"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Content="Accept"/>
                        </Grid>
