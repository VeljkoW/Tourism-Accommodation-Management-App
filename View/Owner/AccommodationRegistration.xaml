                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="ChooseLocationBorder" Grid.Column="1" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0 0 30 30"
                            VerticalAlignment="Top">
                        <Grid Height="auto">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Choose location" Grid.Column="1" Margin="0 0 0 10"
                                   HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
                            <DockPanel Grid.Row="1">
                                <Label Content="State:" FontSize="20"/>
                                <ComboBox x:Name="ChooseStateComboBox" SelectedItem="{Binding SelectedChosenState}"
                                          Width="230" Height="30" FontSize="20" HorizontalAlignment="Right" Margin="0 0 0 10" SelectionChanged="StateChosenSelectionChanged"/>
                            </DockPanel>
                            <DockPanel Grid.Row="2">
                                <Label Content="City:" FontSize="20"/>
                                <ComboBox x:Name="ChooseCityComboBox" SelectedItem="{Binding SelectedChosenCity}"
                                          Width="230" Height="30" FontSize="20" HorizontalAlignment="Right" Margin="0 0 0 10" SelectionChanged="CityChosenSelectionChanged"
                                          SelectedValuePath="PrintCities" DisplayMemberPath="PrintCities"/>
                            </DockPanel>
                        </Grid>
                    </Border>


                    <TextBlock Text="Your Accommodations" Grid.Column="0"
                           HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30"/>
                    <ItemsControl x:Name="accommodationItems" Grid.Column="0" ItemsSource="{Binding AccommodationsDisplay}" Margin="20 40 20 10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EBEBEB" BorderThickness="1" CornerRadius="15" Margin="0 10" Background="WhiteSmoke"
                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="5" Color="#A0A0A0" Opacity="0.5"/>
                                    </Border.Effect>
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <userControls:ImageSlider Grid.Column="0" Height="170" Width="220" ImagePaths="{Binding ImagePaths, UpdateSourceTrigger=PropertyChanged}"/>
                                        <!-- <Border Grid.Column="0" BorderThickness="0" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="0 10">
                                            <ItemsControl ItemsSource="{Binding Path=Images}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Image Source="{Binding Path=Path}" Stretch="UniformToFill" Width="200" Height="170" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border> -->
                                        <Border Grid.Column="1" BorderThickness="1" BorderBrush="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                                Margin="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1.2*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Text="{Binding Path=Name}" FontWeight="Bold" FontSize="27" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="7 0 0 0"/>

                                                <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="20" Margin="10 0 0 0">
                                                    <Run Text="State:"/>
                                                    <Run Text="{Binding Path=Location.State}"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="20" Margin="10 0 0 0">
                                                    <Run Text="City:"/>
                                                    <Run Text="{Binding Path=Location.City}"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="20" Margin="10 0 0 0">
                                                    <Run Text="Type:"/>
                                                    <Run Text="{Binding Path=AccommodationType}"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="17" Margin="50 0 0 0">
                                                    <Run Text="Max Guest Number:"/>
                                                    <Run Text="{Binding Path=MaxGuestNumber}"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="17" Margin="50 0 0 0">
                                                    <Run Text="Min Reservation Days:"/>
                                                    <Run Text="{Binding Path=MinReservationDays}"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="17" Margin="50 0 0 0">
                                                    <Run Text="Cancelation Days Limit:"/>
                                                    <Run Text="{Binding Path=CancelationDaysLimit}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
