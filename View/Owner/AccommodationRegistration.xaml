<Page x:Class="BookingApp.View.Owner.AccommodationRegistration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Owner"
      xmlns:userControls="clr-namespace:BookingApp.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AccommodationRegistration"
      PreviewMouseDown="PreviewMouseDownEvent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Grid.Row="1" Margin="30 0 30 30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <!--Registration-->
            <Label Content="Registration" Grid.Column="0"
                   HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="10 40 10 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="2*" MinHeight="50"/>
                        <RowDefinition Height="*" MinHeight="50"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0">
                        <Label Content="Accommodation Name:*" FontSize="20"/>
                        <TextBox x:Name="NameTextBox" Width="250" Height="32" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" /> 
                    </DockPanel>
                    <DockPanel Grid.Row="1">
                        <Label Content="Accommodation Type:*" FontSize="20"/>
                        <ComboBox x:Name="AccommodationTypeComboBox" Width="250" Height="32" FontSize="20"
                                  HorizontalAlignment="Right" VerticalAlignment="Center">
                            <ComboBoxItem Content="Apartment"></ComboBoxItem>
                            <ComboBoxItem Content="House"></ComboBoxItem>
                            <ComboBoxItem Content="Hut"></ComboBoxItem>
                        </ComboBox>
                    </DockPanel>
                    <DockPanel Grid.Row="2">
                        <Label Content="Location - State:*" FontSize="20"/>
                        <ComboBox x:Name="StateComboBox" Width="250" Height="32" FontSize="20"
                                  ItemsSource="{Binding States, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedState}"
                                  HorizontalAlignment="Right" VerticalAlignment="Center" SelectionChanged="StatePickedSelectionChanged"/>
                    </DockPanel>
                    <DockPanel Grid.Row="3">
                        <Label Content="Location - City:*" FontSize="20"/>
                        <ComboBox x:Name="CityComboBox" Width="250" Height="32" FontSize="20" ItemsSource="{Binding Locations, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedItem="{Binding SelectedLocation}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                  SelectedValuePath="PrintCities" DisplayMemberPath="PrintCities"/>
                    </DockPanel>
                    <DockPanel Grid.Row="4">
                        <Label Content="Max number of guests:*" FontSize="20"/>
                        <!-- <TextBox x:Name="MaxGuestNumberTextBox" Width="250" Height="32" FontSize="20" 
                                 HorizontalAlignment="Right" VerticalAlignment="Center"/> -->
                        <userControls:NumberTextBox x:Name="MaxGuestNumberTextBox" Width="250" Height="32" FontSize="20" 
                                                    HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <DockPanel Grid.Row="5">
                        <Label Content="Min number of reservation days:*" FontSize="20"/>
                        <!-- <TextBox x:Name="MinResDaysTextBox" FontSize="20" Width="250" Height="32" 
                                 HorizontalAlignment="Right" VerticalAlignment="Center"/> -->
                        <userControls:NumberTextBox x:Name="MinResDaysTextBox" Width="250" Height="32" FontSize="20" 
                                                    HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <DockPanel Grid.Row="6">
                        <Label Content="Cancelation days limit:*" FontSize="20"/>
                        <!-- <TextBox x:Name="CancelationDaysLimitTextBox" Width="250" Height="32" FontSize="20" 
                                 HorizontalAlignment="Right" VerticalAlignment="Center"/> -->
                        <userControls:NumberTextBox x:Name="CancelationDaysLimitTextBox" Width="250" Height="32" FontSize="20" 
                                                    HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <Grid Grid.Row="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="100"/>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="AddImagesButton" Grid.Column="0" Command="{Binding AddImage}" Content="Add Image"
                                HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="60" FontSize="24"/>
                        <!-- <ListBox x:Name="ImagesListBox" Grid.Column="1" ItemsSource="{Binding RelativeImagePaths, UpdateSourceTrigger=PropertyChanged}"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="24" Margin="10 20 10 20"/> -->

                        <Button Grid.Column="1" BorderThickness="0" Width="20" Height="20" Background="Transparent" 
                                HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding PreviousImageCommand}">
                            <Button.Content>
                                <Image Source="../../Resources/Images/Guest/arrowleft.png"></Image>
                            </Button.Content>
                        </Button>
                        <Border Grid.Column="1" Margin="25 15" BorderThickness="2"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black">
                            <Grid>
                                <Image Source="{Binding CurrentImagePath}" Stretch="Uniform"/>
                                <Button Grid.Column="1" BorderThickness="0" Width="20" Height="20" Background="Transparent" 
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding DeleteImageCommand}">
                                    <Button.Content>
                                        <Image Source="../../Resources/Images/delete.png"></Image>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </Border>
                        <Button Grid.Column="1" BorderThickness="0" Width="20" Height="20" Background="Transparent" 
                                HorizontalAlignment="Right" VerticalAlignment="Center" Command="{Binding NextImageCommand}">
                            <Button.Content>
                                <Image Source="../../Resources/Images/Guest/arrowright.png"></Image>
                            </Button.Content>
                        </Button>
                    </Grid>
                    <Button x:Name="AcceptButton" Command="{Binding Accept}" Background="#e49a53" Grid.Row="10" Height="60" Width="200"
                            HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Content="Accept"/>
                    <Label x:Name="SuccessLabel" Content="Successfully added!" Grid.Row="10" 
                           VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="20" Foreground="Green"/>
                </Grid>
            </Border>

            <!--Choose location-->
            <Label Content="Choose location" Grid.Column="1"
                   HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
            <Grid Grid.Column="1" Margin="10 40 10 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Label Content="State:" FontSize="20"/>
                        <ComboBox ItemsSource="{Binding Locations, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding SelectedLocation}"
                                  Width="250" Height="30" FontSize="20" HorizontalAlignment="Left"
                                  SelectedValuePath="Print" DisplayMemberPath="Print"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Label Content="City:" FontSize="20"/>
                        <ComboBox ItemsSource="{Binding Locations, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding SelectedLocation}"
                                  Width="250" Height="30" FontSize="20" HorizontalAlignment="Left"
                                  SelectedValuePath="Print" DisplayMemberPath="Print"/>
                    </StackPanel>
                </Grid>

                <!--List of accommodations-->
                <Label Content="List of Accommodations on the Location:" Grid.Row="1"
                       HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
                <ListBox Grid.Row="1"
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="24" Margin="0 40 0 0"/>


                <!--Selected Accommodation-->
                <Label Content="Selected Accommodation:" Grid.Row="2"
                       HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
                <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0 40 0 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" MinHeight="32"/>
                            <RowDefinition Height="*" MinHeight="32"/>
                            <RowDefinition Height="*" MinHeight="32"/>
                            <RowDefinition Height="*" MinHeight="32"/>
                            <RowDefinition Height="*" MinHeight="32"/>
                            <RowDefinition Height="*" MinHeight="32"/>
                            <RowDefinition Height="2*" MinHeight="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Label Content="Selected Guest: " FontSize="17"/>
                            <Label Content="Name1" FontSize="17"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"  Grid.Row="1">
                            <Label Content="Accommodation Name: " FontSize="17"/>
                            <Label Content="Apartment" FontSize="17"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <Label Content="Location: " FontSize="17"/>
                            <Label Content="State - City" FontSize="17"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="3">
                            <Label Content="Max number of guests: " FontSize="17"/>
                            <Label Content="3" FontSize="17"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="4">
                            <Label Content="Min number of reservation days: " FontSize="17"/>
                            <Label Content="3" FontSize="17"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="5">
                            <Label Content="Cancelation days limit: " FontSize="17"/>
                            <Label Content="3" FontSize="17"/>
                        </StackPanel>


                        <ListBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="6" ItemsSource="{Binding RelativeImagePaths, UpdateSourceTrigger=PropertyChanged}"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="24" Margin="10 20 10 20"/>

                        <Button Content="Close Accommodation" Grid.Row="6" Grid.ColumnSpan="2" Height="40" Width="300" FontSize="20"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
