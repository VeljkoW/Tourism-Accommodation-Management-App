<Page x:Class="BookingApp.View.Owner.RenovationRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Owner"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RenovationRequestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <ListBox ItemsSource="{Binding RenovationRequests}" SelectedValuePath="PrintRequests" DisplayMemberPath="PrintRequests" FontSize="15"/>

            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <Button Content="Reviews" FontSize="24" Width="150" Height="70" Margin="0 0 200 0" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Click="ReviewsClick"/>
                <Button Content="Renovation&#10;Requests" FontSize="24" Width="150" Height="70" Margin="200 0 0 0" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Background="DarkGray"/>

                
            </Grid>

        </Grid>
    </Grid>
</Page>
