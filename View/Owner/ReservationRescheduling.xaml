<Page x:Class="BookingApp.View.Owner.ReservationRescheduling"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Owner"
      xmlns:local1="clr-namespace:BookingApp.Domain.Model.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ReservationRescheduling">
    <Page.Resources>
        <local1:GuestIdToUsernameConverter x:Key="GuestIdToUsernameConverter"/>
        <local1:AccommodationIdToNameConverter x:Key="AccommodationIdToNameConverter"/>
        <local1:AccommodationIdToLocation x:Key="AccommodationIdToLocation"/>
        <local1:CommentIdToComment x:Key="CommentIdToComment"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Grid.Row="1" Margin="30 0 30 30">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Label Content="Select the reservation request you want to accept/decline:"
                   HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
            <DataGrid x:Name="RatingGuestsTable" Grid.Row="0" Margin="0 60 0 0"
                      ItemsSource="{Binding GuestReschedulingRequests, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding SelectedGuestReschedulingRequest, UpdateSourceTrigger=PropertyChanged}"
                      AutoGenerateColumns="False"
                      SelectionMode="Single" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Guest Username" Binding="{Binding GuestId, Converter={StaticResource GuestIdToUsernameConverter}, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTextColumn Width="*" Header="Accommodation Name" Binding="{Binding AccommodationId, Converter={StaticResource AccommodationIdToNameConverter}, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTextColumn Width="*" Header="Location" Binding="{Binding AccommodationId, Converter={StaticResource AccommodationIdToLocation}, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTextColumn Width="*" Header="Check-in Date" Binding="{Binding CheckInDate, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTextColumn Width="*" Header="Check-out Date" Binding="{Binding CheckOutDate, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTemplateColumn Width="50" Header="Free">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image x:Name="isFreeImage" Source="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"
                                       Width="12"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="1" Margin="0 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Selected Guest" Grid.Column="0"
                       HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0 40 0 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*" MinHeight="80"/>
                            <RowDefinition Height="*" MinHeight="50"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Label Content="Guest Username: " FontSize="20"/>
                            <Label Content="{Binding SelectedGuestReschedulingRequest.GuestId, Converter={StaticResource GuestIdToUsernameConverter}, UpdateSourceTrigger=PropertyChanged}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"  Grid.Row="1">
                            <Label Content="Accommodation Name: " FontSize="20"/>
                            <Label Content="{Binding SelectedGuestReschedulingRequest.AccommodationId, Converter={StaticResource AccommodationIdToNameConverter}, UpdateSourceTrigger=PropertyChanged}" FontSize="20"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <Label Content="Location: " FontSize="20"/>
                            <Label Content="{Binding SelectedGuestReschedulingRequest.AccommodationId, Converter={StaticResource AccommodationIdToLocation}, UpdateSourceTrigger=PropertyChanged}" FontSize="20"/>
                        </StackPanel>
                        <Label Content="Comment:" FontSize="20"  Grid.Row="3"/>

                        <TextBox x:Name="CommentTextBox" Grid.Row="4" Height="80" VerticalAlignment="Top" FontSize="20" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <Grid Grid.Row="5" Margin="0 5 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="220"/>
                                <ColumnDefinition Width="*" MinWidth="220"/>
                            </Grid.ColumnDefinitions>
                            <Button Content="Decline" Grid.Column="0" Height="60" Width="200" FontSize="24"
                                    HorizontalAlignment="Center" Command="{Binding DeclineClick}" VerticalAlignment="Center"/>
                            <Button Content="Accept" Command="{Binding AcceptClick}" Grid.Column="1" Height="60" Width="200" FontSize="24"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>

                <Label Content="Check Reservations:" Grid.Column="1" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
                <Grid Grid.Column="1"  Margin="20 40 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" MinHeight="120"/>
                        <RowDefinition Height="2*" MinHeight="80"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0">
                        <Label Content="Accommodation Name:" FontSize="20" Margin="0 0 20 0"/>
                        <ComboBox ItemsSource="{Binding Accommodations, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedAccommodation, UpdateSourceTrigger=PropertyChanged}"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="30" FontSize="20" SelectionChanged="AccommodationSelectionChanged"
                                  SelectedValuePath="PrintAccommodation" DisplayMemberPath="PrintAccommodation"/>
                    </DockPanel>
                    <DataGrid Grid.Row="0" Margin="0 40 0 20"
                              ItemsSource="{Binding ReservedAccommodations, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False"
                              SelectionMode="Single" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Guest Username" Binding="{Binding GuestId, Converter={StaticResource GuestIdToUsernameConverter}, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Width="*" Header="Check-in Date" Binding="{Binding CheckInDate, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Width="*" Header="Check-out Date" Binding="{Binding CheckOutDate, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="5" Margin="0 0 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*" MinHeight="50"/>
                                <RowDefinition Height="*" MinHeight="30"/>
                                <RowDefinition Height="*" MinHeight="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2.5*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="For the selected accommodation, choose &#10;start and end date you want the report for:" 
                                   FontSize="15" Grid.Row="0"/>
                            <DockPanel Grid.Row="1" VerticalAlignment="Center">
                                <Label Content="Start Date:*" FontSize="15"/>
                                <DatePicker Width="250" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
                            </DockPanel>
                            <DockPanel Grid.Row="2" VerticalAlignment="Center">
                                <Label Content="End Date:*" FontSize="15" Margin="0 0 6 0"/>
                                <DatePicker Width="250" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
                            </DockPanel>

                            <Button Content="Download&#10;Reservation&#10;Report" Grid.Column="1" Grid.RowSpan="3" Grid.Row="0" Height="80" Width="140" FontSize="18"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
