<Page x:Class="BookingApp.View.Owner.AccommodationStatistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Owner"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AccommodationStatistics">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Margin="30 10 30 30">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="2*" MinHeight="300"/>
                <RowDefinition Height="*"  MinHeight="200"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            <Label Content="Choose Your Accommodation: " FontSize="24"
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <ComboBox x:Name="LocationComboBox" Grid.Column="1" Grid.Row="0" Width="400" Height="40" Margin="10 0 0 0"
                      ItemsSource="{Binding Locations, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding SelectedLocation}" 
                      HorizontalAlignment="Left" VerticalAlignment="Center"/>
            
            <!--STATISTICs BY YEAR-->
            <Grid Grid.Row="1" Grid.Column="0" Margin="0 0 20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Label Content="Statistics by year" FontSize="20" Grid.Row="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <DataGrid x:Name="RatingGuestsTable" Grid.Row="1"
                          ItemsSource="{Binding GuestReschedulingRequests, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedGuestReschedulingRequest, UpdateSourceTrigger=PropertyChanged}"
                          AutoGenerateColumns="False"
                          SelectionMode="Single" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Year"/>
                        <DataGridTextColumn Width="2*" Header="Reservation"/>
                        <DataGridTextColumn Width="2*" Header="Cancelation"/>
                        <DataGridTextColumn Width="2*" Header="Rescheduling"/>
                        <DataGridTextColumn Width="2*" Header="Renovation recommended"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Label Content="Most occupied year: 2020" FontSize="18" Grid.Row="2"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!--STATISTICs BY MONTH-->
            <Grid Grid.Row="1" Grid.Column="1" Margin="20 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Label Content="Statistics by month" FontSize="20" Grid.Row="0"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <DataGrid x:Name="whatever" Grid.Row="1"
                          ItemsSource="{Binding GuestReschedulingRequests, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedGuestReschedulingRequest, UpdateSourceTrigger=PropertyChanged}"
                          AutoGenerateColumns="False"
                          SelectionMode="Single" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Month"/>
                        <DataGridTextColumn Width="2*" Header="Reservation"/>
                        <DataGridTextColumn Width="2*" Header="Cancelation"/>
                        <DataGridTextColumn Width="2*" Header="Rescheduling"/>
                        <DataGridTextColumn Width="2*" Header="Renovation recommended"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Label Content="Most occupied month: May" FontSize="18" Grid.Row="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!--MOST POPULAR LOCATIONS-->
            <Grid Grid.Row="2" Grid.Column="0" Margin="0 10 20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Most popular locations" FontSize="20" Grid.Row="0"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="40 0 40 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Content="Location 1" FontSize="20" Grid.Row="0" Grid.Column="0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Content="Add accommodations" FontSize="18" Grid.Row="0" Grid.Column="1" Margin="5"/>

                        <Label Content="Location 2" FontSize="20" Grid.Row="1" Grid.Column="0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Content="Add accommodations" FontSize="18" Grid.Row="1" Grid.Column="1" Margin="5"/>

                        <Label Content="Location 3" FontSize="20" Grid.Row="2" Grid.Column="0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Content="Add accommodations" FontSize="18" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    </Grid>
                </Border>
            </Grid>

            <!--MOST UNPOPULAR LOCATIONS-->
            <Grid Grid.Row="2" Grid.Column="1" Margin="20 10 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Most unpopular locations" FontSize="20" Grid.Row="0"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="40 0 40 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Location 1" FontSize="20" Grid.Row="0" Grid.Column="0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Content="Add accommodations" FontSize="18" Grid.Row="0" Grid.Column="1" Margin="5"/>

                        <Label Content="Location 2" FontSize="20" Grid.Row="1" Grid.Column="0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Content="Add accommodations" FontSize="18" Grid.Row="1" Grid.Column="1" Margin="5"/>

                        <Label Content="Location 3" FontSize="20" Grid.Row="2" Grid.Column="0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Content="Add accommodations" FontSize="18" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
