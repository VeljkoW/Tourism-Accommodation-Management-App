<UserControl x:Class="BookingApp.View.Guide.Pages.UserControlWizardPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.View.Guide.Pages"
             mc:Ignorable="d" 
             d:Height="650" d:Width="780">
    <Grid Background="{StaticResource NBackGroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="500"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="{Binding Path=ImagePath,Mode=OneWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Image>
            <TextBlock Grid.Row="1" Text="{Binding Text}" TextWrapping="Wrap"></TextBlock>
        </Grid>
    </Grid>
</UserControl>
