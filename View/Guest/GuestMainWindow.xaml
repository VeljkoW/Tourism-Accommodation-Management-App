<Window x:Class="BookingApp.View.Guest.GuestMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.Guest"
        mc:Ignorable="d"
        Title="GuestMainWindow" Height="1080" Width="1920">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Grid.Row="0" Height="64" Click="NotificationsClick" Background="Transparent" Width="64" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 50 100 0">
            <Button.Content>
                <Image Source="../../Resources/Images/Owner/bell.png"></Image>
            </Button.Content>
        </Button>
        <Label Grid.Column="1" Grid.Row="0" Content="Notifications"
        FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 75 20"/>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3" Grid.RowSpan="3" ></Frame>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Height="150" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="AccommodationsClick" Content="Accommodations" FontSize="30"/>
            <Button Grid.Row="1" Height="150" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="ReservationClick" Content="Reservations" FontSize="30"/>
            <Button Grid.Row="2" Height="150" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="ReviewsClick" Content="Reviews" FontSize="30"/>
            <Button Grid.Row="3" Height="150" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="ForumClick" Content="Forum" FontSize="30" />
            <Grid Grid.Row="4" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Click="LogOutClick" Content="Log Out" FontSize="20" Height="60" Width="150"></Button>
                <Button Grid.Column="1" Click="TutorialClick" Content="Tutorial" FontSize="20" Height="60" Width="150" ></Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
