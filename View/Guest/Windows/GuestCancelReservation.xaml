<Window x:Class="BookingApp.View.Guest.Windows.GuestCancelReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.Guest.Windows"
        mc:Ignorable="d"
        Title="GuestCancelReservation" Height="180" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" BorderBrush="black" BorderThickness="2" Margin="30" CornerRadius="20">
            <Label Content="Are you sure you want to cancel the reservation?" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </Border>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="YES" Margin="100 0 0 0" Width="50" Height="30" Command="{Binding cancelReservation}"></Button>
            <Button Content="NO" Margin="150 0 0 0" Width="50" Height="30" Command="{Binding closeWindow}"></Button>
        </StackPanel>
    </Grid>
</Window>
