<Page x:Class="BookingApp.View.Guest.Pages.Accommodations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Guest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Accommodations">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Search" Grid.Column="7" Grid.Row="0" Command="{Binding SearchButtonClick}" Height="40" Width="70"/>
            <TextBox x:Name="TextBoxName" Grid.Column="1" Grid.Row="0" Height="25" Width="100" VerticalAlignment="Top" Foreground="Gray" GotFocus="AccommodationName_Clicked" LostFocus="AccommodationName_NotClicked"/>
            <TextBox x:Name="TextBoxState" Grid.Column="2" Grid.Row="0" TextWrapping="Wrap" Height="25" Width="100" VerticalAlignment="Top" Foreground="Gray" GotFocus="AccommodationState_Clicked" LostFocus="AccommodationState_NotClicked"/>
            <TextBox x:Name="TextBoxCity" Grid.Column="3" Grid.Row="0" TextWrapping="Wrap" Height="25" Width="100" VerticalAlignment="Top" Foreground="Gray" GotFocus="AccommodationCity_Clicked" LostFocus="AccommodationCity_NotClicked"/>
            <ComboBox x:Name="ComboBoxType" Grid.Column="4" Grid.Row="0" Height="25" Width="100" VerticalAlignment="Top">
                <ComboBoxItem Content=""></ComboBoxItem>
                <ComboBoxItem Content= "Apartment"></ComboBoxItem>
                <ComboBoxItem Content= "House"></ComboBoxItem>
                <ComboBoxItem Content= "Hut"></ComboBoxItem>
            </ComboBox>
            <TextBox x:Name="TextBoxReservationDays" Grid.Column="5" Grid.Row="0" Height="25" Width="100" VerticalAlignment="Top" Foreground="Gray" GotFocus="ReservationDays_Clicked" LostFocus="ReservationDays_NotClicked"/>
            <TextBox x:Name="TextBoxGuestNumber" Grid.Column="6" Grid.Row="0" TextWrapping="Wrap" Height="25" Width="100" VerticalAlignment="Top" Foreground="Gray" GotFocus="GuestNumber_Clicked" LostFocus="GuestNumber_NotClicked"/>
            <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="7" VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="accommodationItems" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#EBEBEB" BorderThickness="1" CornerRadius="8" Margin="50 10 50 10" Background="White"
                 HorizontalAlignment="Stretch" VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonDown="ClickedOnCard" MouseRightButtonDown="Gallery">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="5" Color="#A0A0A0" Opacity="0.5"/>
                                </Border.Effect>
                                <Grid Margin="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" BorderThickness="0">
                                        <ItemsControl ItemsSource="{Binding Path=Images}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding Path=Path}" Stretch="UniformToFill" Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>
                                    <Border Grid.Column="1" BorderThickness="0">
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Path=Name}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                            <TextBlock Text="{Binding Path=AccommodationType}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                            <TextBlock Text="{Binding Path=Location.City}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Path=Location.State}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <Label HorizontalAlignment="Right" VerticalAlignment="Bottom">Max Guest Number</Label>
                                            <TextBlock Text="{Binding Path=MaxGuestNumber}" TextWrapping="Wrap" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                            <Label HorizontalAlignment="Right" VerticalAlignment="Bottom">Min Reservation Days</Label>
                                            <TextBlock Text="{Binding Path=MinReservationDays}" TextWrapping="Wrap" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
